{
    "$id": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/templates/blank.json#",
    "$schema": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/template.schema.json#",
    "meta": {
      "label": {
        "en": "Adaptive Approval - Detail",
        "it": "Adaptive Approval - Dettaglio"
      },
      "description": {
        "en": "Monitors all rules created",
        "it": "Monitora tutte le regole create"
      }
    },
    "template": {
      "definitions": {
        "dataSchema": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "label": "Id",
              "visualizationOptions": {
                "hidden": true
              },
              "formOptions": {
                "hidden": true
              },
              "filtersOptions": {
                "hidden": true
              }
            },
            "__STATE__": {
              "type": "string",
              "label": "State",
              "enum": [
                "PUBLIC",
                "DRAFT",
                "TRASH",
                "DELETED"
              ],
              "visualizationOptions": {
                "hidden": true
              },
              "formOptions": {
                "hidden": true
              },
              "filtersOptions": {
                "hidden": true
              }
            },
            "ruleId": {
              "type": "string",
              "label": "Id"
            },
            "priority": {
              "type": "number",
              "label": "Priority"
            },
            "type": {
              "type": "string",
              "label": "Type"
            },
            "rules": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string"
                  },
                  "operator": {
                    "type": "string",
                    "enum": [
                      "equal",
                      "not_equal",
                      "in",
                      "not_in",
                      "greater_than",
                      "greater_or_equal_than",
                      "less_than",
                      "less_or_equal_than"
                    ]
                  },
                  "value": {
                    "type": "string"
                  }
                }
              },
              "visualizationOptions": {
                "hidden": true
              }
            },
            "response": {
              "type": "object",
              "visualizationOptions": {
                "hidden": true
              }
            }
          }
        }
      },
      "content": {
        "content": [
          {
            "content": [
              {
                "tag": "div",
                "content": [
                  {
                    "properties": {
                      "content": "",
                      "type": "link",
                      "iconId": "LeftOutlined",
                      "action": {
                        "type": "go-back",
                        "config": {}
                      }
                    },
                    "tag": "bk-button"
                  },
                  {
                    "properties": {
                      "content": "Rule Detail"
                    },
                    "tag": "bk-title"
                  },
                  {
                    "tag": "bk-refresh-button",
                    "attributes": {
                      "style": "margin-left: 14px; align-self: end;"
                    }
                  },
                  {
                    "tag": "div",
                    "attributes": {
                      "style": "flex-grow: 1;"
                    }
                  }
                ],
                "attributes": {
                  "style": "display: flex; flex-direction: row; gap: 10px; margin: 0 0 10px 0; padding: 0 20px;"
                }
              },
              {
                "tag": "div",
                "attributes": {
                  "style": "width: 100%; display: flex; justify-content: space-between;"
                },
                "content": [
                  {
                    "attributes": {
                      "style": "margin-right: 4px"
                    },
                    "properties": {
                      "dataSchema": {
                        "$ref": "#/definitions/dataSchema"
                      },
                      "filters": []
                    },
                    "tag": "bk-filters-manager"
                  }
                ]
              }
            ],
            "tag": "header",
            "attributes": {
              "style": "display: flex; flex-direction: column; padding-top: 10px; background-color: white;"
            }
          },
          {
            "content": [
              {
                "tag": "bk-card",
                "properties": {
                  "customMessageOnAbsentDatum": "-",
                  "customMessageOnAbsentLookup": "Not Found",
                  "cardSchema": {
                    "header": {
                      "icon": "InfoCircleOutlined",
                      "title": {
                        "it": "Overview",
                        "en": "Overview"
                      }
                    },
                    "main": {
                      "dataSchema": {
                        "type": "object",
                        "properties": {
                          "_id": {
                            "type": "string",
                            "label": "Id",
                            "visualizationOptions": {
                              "hidden": true
                            },
                            "formOptions": {
                              "hidden": true
                            },
                            "filtersOptions": {
                              "hidden": true
                            }
                          },
                          "ruleId": {
                            "type": "string",
                            "label": "Id"
                          },
                          "priority": {
                            "type": "number",
                            "label": "Priority"
                          },
                          "type": {
                            "type": "string",
                            "label": "Type"
                          },
                          "rules": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "key": {
                                  "type": "string"
                                },
                                "operator": {
                                  "type": "string",
                                  "enum": [
                                    "equal",
                                    "not_equal",
                                    "in",
                                    "not_in",
                                    "greater_than",
                                    "greater_or_equal_than",
                                    "less_than",
                                    "less_or_equal_than"
                                  ]
                                },
                                "value": {
                                  "type": "string"
                                }
                              }
                            },
                            "visualizationOptions": {
                              "hidden": true
                            }
                          }
                        }
                      }
                    },
                    "footer": {
                      "buttons": {
                        "tag": "bk-button",
                        "content": {
                          "en": "Edit",
                          "it": "Modifica"
                        },
                        "loadingOnAction": false,
                        "action": {
                          "type": "event",
                          "config": {
                            "events": {
                              "label": "selected-data",
                              "payload": "{{rawObject data}}"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "attributes": {
                  "style": " padding: 2em 4em 0; flex-grow: 1; position:relative; overflow:hidden; width: 100%"
                }
              },
              {
                "properties": {
                  "dataSchema": {
                    "type": "object",
                    "properties": {
                      "key": {
                        "type": "string"
                      },
                      "operator": {
                        "type": "string",
                        "enum": [
                          "equal",
                          "not_equal",
                          "in",
                          "not_in",
                          "greater_than",
                          "greater_or_equal_than",
                          "less_than",
                          "less_or_equal_than"
                        ]
                      },
                      "value": {
                        "type": "string"
                      }
                    }
                  },
                  "disableRowSelection": true,
                  "displayedDataPath": "data.[0].rules",
                  "maxLines": 10,
                  "customActions": []
                },
                "attributes": {
                  "style": "margin: 0 1vw 0 0;"
                },
                "tag": "bk-table"
              },
              {
                "tag": "bk-dynamic-form-card",
                "properties": {
                  "dataSchema": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string",
                        "label": "Id",
                        "visualizationOptions": {
                          "hidden": true
                        },
                        "formOptions": {
                          "hidden": true
                        },
                        "filtersOptions": {
                          "hidden": true
                        }
                      },
                      "response": {
                        "type": "object",
                        "label": "Response"
                      }
                    }
                  }
                },
                "attributes": {
                  "style": "margin: 0 1vw 0 0;"
                }
              },
              {
                "properties": {
                  "requireConfirm": {
                    "onClose": false,
                    "onSave": true
                  },
                  "dataSchema": {
                    "$ref": "#/definitions/dataSchema"
                  },
                  "width": "70vw",
                  "afterFinishEvents": {
                    "label": "change-query",
                    "payload": {}
                  },
                  "wizard": [
                    {
                      "keys": [
                        "priority",
                        "ruleId",
                        "type"
                      ],
                      "labels": {
                        "stepperTitle": {
                          "en": "Overview",
                          "it": "Dettaglio Regola"
                        }
                      }
                    },
                    {
                      "keys": [
                        "rules"
                      ],
                      "labels": {
                        "wizardAddNew": {
                          "en": "Add rule",
                          "it": "Aggiungi regola"
                        },
                        "stepperTitle": {
                          "en": "Conditions",
                          "it": "Condizioni"
                        },
                        "accordionHeader": {
                          "en": "Conditions",
                          "it": "Condizioni"
                        },
                        "accordionEmptyComponent": {
                          "en": "No rules",
                          "it": "Nessuna regola definita"
                        }
                      }
                    },
                    {
                      "keys": [
                        "response",
                        "_id"
                      ],
                      "labels": {
                        "stepperTitle": {
                          "en": "Response",
                          "it": "Risposta"
                        }
                      }
                    }
                  ]
                },
                "tag": "bk-form-wizard"
              },
              {
                "tag": "bk-confirmation-modal"
              },
              {
                "properties": {
                  "rootElementSelectors": "main.micro-lc-layout-content",
                  "successEventMap": {
                    "create-data": {
                      "title": "Success",
                      "content": "Data successfully created",
                      "type": "success"
                    },
                    "update-data": {
                      "title": "Success",
                      "content": "Data successfully updated",
                      "type": "success"
                    },
                    "delete-data": {
                      "title": "Success",
                      "content": "Data successfully deleted",
                      "type": "success"
                    }
                  },
                  "errorEventMap": {
                    "create-data": {
                      "title": "Error",
                      "content": "An error occurred during order creation",
                      "type": "error"
                    },
                    "update-data": {
                      "title": "Error",
                      "content": "An error occurred during order updated",
                      "type": "error"
                    },
                    "delete-data": {
                      "title": "Error",
                      "content": "An error occurred during order deletion",
                      "type": "error"
                    }
                  }
                },
                "tag": "bk-notifications",
                "attributes": {}
              }
            ],
            "tag": "main",
            "attributes": {
              "style": "flex-grow: 1; background-color: #f0f2f5; padding: 20px; overflow-y: auto;"
            }
          },
          {
            "tag": "bk-url-parameters",
            "properties": {
              "urlMask": "/backoffice/rule-detail/:_id"
            }
          },
          {
            "content": [
              {
                "properties": {
                  "dataSchema": {
                    "$ref": "#/definitions/dataSchema"
                  },
                  "width": "40vw"
                },
                "tag": "bk-filter-drawer"
              }
            ],
            "tag": "aside"
          },
          {
            "content": [
              {
                "tag": "bk-bulk-actions",
                "properties": {
                  "dataSchema": {
                    "$ref": "#/definitions/dataSchema"
                  }
                }
              },
              {
                "tag": "div",
                "attributes": {
                  "style": "flex-grow: 1;"
                }
              },
              {
                "tag": "bk-footer",
                "attributes": {
                  "style": "display: flex; justify-content: end; align-items: center;"
                }
              },
              {
                "tag": "bk-pagination",
                "properties": {
                  "pageSize": 10
                }
              }
            ],
            "tag": "footer",
            "attributes": {
              "style": "display: flex; flex-direction: row; flex-wrap: wrap; padding: 10px 20px; background-color: white; gap: 10px; position: sticky; bottom: 0; z-index: 10"
            }
          },
          {
            "properties": {
              "basePath": "/change-me",
              "dataSchema": {
                "$ref": "#/definitions/dataSchema"
              }
            },
            "tag": "bk-crud-client"
          }
        ],
        "tag": "div",
        "attributes": {
          "style": "width: 100%; height: 100%; display: flex; flex-direction: column; position: relative;"
        }
      },
      "sources": [
        "https://cdn.mia-platform.eu/backoffice/bk-web-components/{{BACK_KIT_VERSION}}/dist/bk-web-components.esm.js"
      ]
    }
  }